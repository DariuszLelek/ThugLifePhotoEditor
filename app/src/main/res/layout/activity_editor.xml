<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.darodev.thuglifephotoeditor.EditorActivity">

    <FrameLayout
        android:id="@+id/layout_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/view_edit_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc_picture"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_launcher"/>

            <FrameLayout
                android:id="@+id/layout_image_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/view_image_default_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_layer"
                    app:srcCompat="@android:color/transparent"/>

                <Button
                    android:id="@+id/btn_add_bitmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:onClick="onAddBitmapClick"
                    android:text="add bmp"/>

                <Button
                    android:id="@+id/btn_remove_bitmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:onClick="onRemoveBitmapClick"
                    android:text="remove"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_gui"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnTakePicture"
                android:text="Button"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onSelectPictureClick"
                android:text="pic"/>

            <Button
                android:id="@+id/btn_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:onClick="onRotateClick"
                android:text="rotate"/>
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="bottom|center"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
